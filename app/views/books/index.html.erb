<% if flash[:notice] %>
  <p class="alert"><%= notice %></p>
<% end %>


<body>
<h1>Books</h1>

<table>
 <thead>
  <tr>
   <th>Title</th>
   <th>Body</th>
   <th colspan="3"></th>
  </tr>
 </thead>

 <tbody>

  <tr><% @books.each do |book| %></tr>

   <td><%= book.title %></td>
   <td><%= book.body %></td>
   <td><%= link_to "Show", book_path(book.id) %></td>
   <td><%= link_to "Edit", edit_book_path(book.id) %></td>
   <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>

  <% end %>
 </tbody>

</table>



<h2>New book</h2>

<% if @book.errors.any? %>
  <div class="error_explanation">

   <h4><%= @book.errors.count %> errors prohibited this book from being saved:</h4>

  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>




<%= form_with model: @book do |f| %>

 <div class="title-body">
  <div class="title-text">Title</div>
  <%= f.text_field :title %>
 </div>

 <div class="title-body">
  <div class="body-text">Body</div>
  <%= f.text_area :body %>
 </div>

 <div class="action">
  <%= f.submit 'Create Book' %>
 </div>

<% end %>
</body>